{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Pica",
  "description": "Instant, reliable access to hundreds of third-party integrations. Zero setup required.",
  "colors": {
    "primary": "#000000",
    "light": "#FFFFFF",
    "dark": "#FFFFFF"
